<% include ./partials/header %>
<h2 class="mt-4">Codes Manager</h2>
<% include ./partials/messages %>
<a href="/code/add" class="btn btn-primary">Add Code</a>
</br></br>

<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Code</th>
      <th>Project</th>
      <th>License</th>
      <th>Used</th>
      <th></th>

    </tr>
  </thead>
  <tbody>

    <% codes.forEach(code => { %>

    <tr scope="row">

      <td><%= code.code %></td>

      <td><%= code.project %> </td>

      <td><%= code.license %></td>

      <td><%= code.used %></td>


      <td>



        <div class="btn-group">
          <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-cog"></i> <b>Options</b>
          </button>
          <div class="dropdown-menu">


              <a class="dropdown-item" href="/code/delete/<%= code._id %>" aria-label="Left Align"
                data-toggle="tooltip" data-placement="top" title="delete code" 
                onclick="return confirm('Are you sure you want to delete this code?');">
                <i class="fas fa-trash-alt"></i> Delete</a>

  <!--<a class="dropdown-item" href="/code/edit/<%= code._id %>" aria-label="Left Align"
    data-toggle="tooltip" data-placement="top" title="edit code">
    <i class="fas fa-edit"></i> Edit
  </a>-->
          </div>
        </div>


        




      </td>


    </tr>

    <% }) %>

  </tbody>
</table>