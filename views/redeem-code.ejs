<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Redeem a MacrosEngine Code</h1>
      <% include ./partials/messages %>
      <form action="/code/redeem" method="POST">
        <div class="form-group">
          <label for="code">Code</label>
          <input
            type="text"
            id="code"
            name="code"
            class="form-control"
            placeholder="Enter Code"
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>

        <div class="g-recaptcha" data-sitekey="<%= process.env.RECAPTCHA_KEY %>"></div>
        
        <button type="submit" class="btn btn-primary btn-block">Redeem Code</button>
      </form>
    </div>
  </div>
</div>
