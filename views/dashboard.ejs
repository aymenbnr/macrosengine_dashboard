<% include ./partials/header %>
<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>
<a href="/users/logout" class="btn btn-primary">Logout</a>
<a href="/licenses" class="btn btn-primary">Licenses</a>

<br /><br />
<hr />
<div class="row state-overview">
  <div class="col-lg-4 col-sm-6">
    <section class="panel">
      <div class="symbol terques">
        <i class="fa fa-key"></i>
      </div>
      <div class="value card">
        <h1>
          <%= licenses.length %>
        </h1>
        <p>Licenses</p>
      </div>
    </section>
  </div>
  <div class="col-lg-4 col-sm-6">
    <section class="panel">
      <div class="symbol red">
        <i class="fa fa-tags"></i>
      </div>
      <div class="value card">
        <h1>
          <%= projects.length %>
        </h1>
        <p>Projects</p>
      </div>
    </section>
  </div>
  <div class="col-lg-4 col-sm-6">
    <section class="panel">
      <div class="symbol blue">
        <i class="fa fa-shopping-cart"></i>
      </div>
      <div class="value card">
        <h1>
          <%= orderstoday.length %>
        </h1>
        <p>Orders Today</p>
      </div>
    </section>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-lg-12">
    <!--
    chart start
    <section class="panel">
      <h1>Daily Orders Chart</h1>
      <div class="card">
        <div class="card-body">
          <canvas id="chLine"></canvas>
        </div>
      </div>
    </section>
    chart end
  --></div>
</div>
<hr />
<div class="row">
  <div class="col-lg-12">
    <!--work progress start-->
    <section class="panel">
      <div class="panel-body progress-panel">
        <h1>Recent Orders Overview</h1>
        <div class="task-progress card">
          <table
            class="table table-striped table-bordered"
            style="width: 100%;"
          >
            <thead>
              <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Project</th>
                <th>Source</th>
              </tr>
            </thead>
            <tbody>
              <% orderstoday.forEach(order => { %>

              <tr scope="row">
                <td><%= order.logdate.toISOString() %></td>

                <td><%= order.logsource %></td>

                <td><%= order.logtype %></td>

                <td><%= order.logtext %></td>
              </tr>

              <% }) %>
            </tbody>
          </table>
          <% if(orderstoday.length == 0) { %>
          <p>no orders to display yet</p>
          <% } %>
        </div>
      </div>
    </section>
    <!--work progress end-->
  </div>
</div>
