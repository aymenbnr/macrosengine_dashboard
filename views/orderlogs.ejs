<% include ./partials/header %>
<h2 class="mt-4">Orders Logs</h2>
<% include ./partials/messages %>
<a href="/logs/clear" onclick="return confirm('Are you sure you want to delete all activity logs?');" class="btn btn-primary">Clear All logs</a>
</br></br>

<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Source</th>
      <th>Type</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
 
    <% orderslogs.forEach(order => { %>

    <tr scope="row">

      <td><%= order.logdate.toISOString() %></td>

      <td><%= order.logsource %> </td>

      <td><%= order.logtype %> </td>

      <td><%= order.logtext %></td>

    </tr>

    <% }) %>

  </tbody>
</table>