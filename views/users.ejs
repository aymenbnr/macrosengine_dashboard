<% include ./partials/header %>
<h2 class="mt-4">Users Manager</h2>
<% include ./partials/messages %>
<a href="/users/add" class="btn btn-primary">Add User</a>
</br></br>

<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Access Level</th>
      <th></th>

    </tr>
  </thead>
  <tbody>

    <% userslist.forEach(usr => { %>

    <tr scope="row">

      <td><%= usr.name %></td>

      <td><%= usr.email %> </td>

      <td>
        <% if(usr.access == 'master'){ %>
          <h6><span class="badge badge-danger"><b><%= usr.access %></b></span></h6>
        <% } %>
        <% if(usr.access == 'admin'){ %>
          <h6><span class="badge badge-warning"><b><%= usr.access %></b></span></h6>
        <% } %>
        <% if(usr.access == 'user'){ %>
          <h6><span class="badge badge-dark"><b><%= usr.access %></b></span></h6>
        <% } %>
      </td>


      <td>


        <div class="btn-group">
          <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-cog"></i> <b>Options</b>
          </button>
          <div class="dropdown-menu">

            <a class="dropdown-item" href="/users/edit/<%= usr._id %>"><i class="fas fa-edit" aria-hidden="true"></i> Edit</a>
            <a class="dropdown-item" href="#" target="_blank"><i class="fas fa-clipboard-check" aria-hidden="true"></i> Show Licenses</a>
            <a class="dropdown-item" href="#"><i class="fas fa-info-circle" aria-hidden="true"></i> More Details</a>
            <a class="dropdown-item" href="/users/delete/<%= usr._id %>"><i class="fas fa-trash-alt" aria-hidden="true" onclick="return confirm('Are you sure you want to this user?');"></i> Delete</a>
          </div>
        </div>

      </td>


    </tr>

    <% }) %>

  </tbody>
</table>